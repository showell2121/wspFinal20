<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Gets bootstrap header file -->
    <%- include("./partials/header.ejs") %>

    <title>Signin</title>
    <style>
        /*Small devices like phones  */
        @media (min-width: 300px) and (max-width: 768px) {         

           

            #button2 {
                width: 100%;
            }

            a {
                width: 300%;
            }

            table {
                width: -10%;
            }
        }


        /* Medium devices (tablets, less than 992px) */
        @media (min-width: 769px) and (max-width: 991.98px) {
            
        }

        /* Large devices like laptops */
        @media (min-width:992px) {

            

            #button2 {

                width: 100%;
            }

            table {
                width: 30%;
            }

        }
    </style>
</head>

<body>

    <%- include("./partials/nav.ejs", {page: "request", user}) %>



    <% if(error) { %>

    <div align="center">
        <p style="color:red; "> <%= error %></p>

    </div>



    <% } %>

    <div class="jumbotron">
        <h1 class="display-4" align="center" style="margin-left: 10%;">Complete The Form</h1>
        <hr class="my-4">
        <form class="form-signin" action="/request" method="POST">


            <table align="center">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <th></th>
                        <td></td>

                        <td colspan="1" align="right">
                            <label>Item: </label>
                        </td>

                        <td></td>
                        <td colspan="1">
                            <input type="text" class="form-control" id="item" name="item">
                        </td>
                        <td></td>

                    </tr>
                    <tr>
                        <th></th>
                        <td></td>
                        <td colspan="1" align="left" >
                            <label style="float: left; width: 200%;">Need Level:</label>
                        </td>
                        <td></td>
                        <td>
                            <div class="dropdown">
                                <select class="form-control" name="need">
                                    <option value="Select">---Select---</option>
                                    <option value="Low">Low</option>                                    
                                    <option value="Moderate">Moderate</option>
                                    <option value="High">High</option>  
                                    <option value="Immediate">Immediate</option>      
                                </select>

                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th></th>
                        <td></td>
                        <td></td>
                        <td colspan="2">
                            <button type="submit" id="button2" class="btn btn-primary">Submit Item</button>
                        </td>
                    </tr>



                </tbody>
            </table>






            <br>

        </form>

    </div>


    <!-- Gets bootstrap footer file -->
    <%- include("./partials/footer.ejs") %>
</body>

</html>